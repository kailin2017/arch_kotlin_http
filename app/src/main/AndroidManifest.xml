<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kailin.coroutines_arch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.kailin.arch_kotlin_http.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoroutinesArch">

        <activity
            android:name="com.kailin.arch_kotlin_http.ui.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kailin.arch_kotlin_http.ui.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.kailin.arch_kotlin_http.ui.DetailActivity"
            android:label="@string/app_name" />
    </application>

</manifest>